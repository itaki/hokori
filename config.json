{
    "info": [
        { "name": "Shop with 1 hub connected to a button and led" }
    ],
    "hubs": [
        {
            "type": "hub",
            "label": "Main Hub",
            "id": "main-hub",
            "version": 1,
            "gpio_expander": {
                "type": "MCP23017",
                "i2c_address": "0x20"
            },
            "pwm_servo": {
                "type": "PCA9685",
                "i2c_address": "0x42"
            },
            "pwm_led": {
                "type": "PCA9685",
                "i2c_address": "0x40"
            },
            "ad_converter": {
                "type": "ADS1115",
                "i2c_address": "0x48"
            }
        }
    ],
    "tools": [
        {
            "type": "tool",
            "label": "Hose",
            "id": "hose",
            "status": "off",
            "preferences": {
                "use_collector": true,
                "gate_prefs": ["HOSE"],
                "last_used": 0,
                "spin_down_time": 5
            },
            "button": {
                "label": "Hose Button",
                "id": "hose_button",
                "type": "RGBLED_Button",
                "physical_location": "By the Hose",
                "connection": {
                    "hub": "main-hub",
                    "address": "0x20",
                    "pin": 0
                },
                "led": {
                    "label": "Hose LED",
                    "id": "hose_button_LED",
                    "type": "RGBLED",
                    "physical_location": "On the Hose Button",
                    "connection": {
                        "hub": "main-hub",
                        "address": "0x40",
                        "pins": [0, 1, 2]
                    }
                }
            },
            "volt": {},
            "keyboard_key": 0
        },
        {
            "type": "tool",
            "label": "Miter Saw",
            "id": "miter_saw",
            "status": "off",
            "preferences": {
                "use_collector": true,
                "gate_prefs": ["MiterSaw_Gate"],
                "last_used": 0,
                "spin_down_time": 10
            },
            "button": {
            },
            "volt": {
                "label": "VS for miter saw",
                "type": "ADS1115",
                "version": "20 amp",
                "voltage_address": {
                    "board_address": "0x49",
                    "pin": 0
                },
                "multiplier": 3
            },
            "keyboard_key": 50
        },
        {
            "type": "tool",
            "label": "LEFT Miter Saw Button",
            "id": "left_miter_saw_button",
            "status": "off",
            "preferences": {
                "use_collector": false,
                "gate_prefs": ["MiterSaw_Left_Gate"]
