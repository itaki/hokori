            "button": {
                "type": "RGBLED_Button",
                "label": "LEFT Miter Saw Button",
                "id": "left_miter_saw_button",
                "physical_location": "Above the miter saw",
                "connection": {
                    "hub": "main-hub",
                    "address": "0x20",
                    "pin": 1
                },
                "led": {
                    "label": "Left Miter Saw Button LED",
                    "id": "left_miter_saw_button_LED",
                    "type": "RGBLED",
                    "physical_location": "Above the miter saw",
                    "connection": {
                        "hub": "main-hub",
                        "address": "0x40",
                        "pins": [3, 4, 5]
                    }
                }
            }
        },
        {
            "type": "tool",
            "label": "RIGHT Miter Saw Button",
            "id": "right_miter_saw_button",
            "status": "off",
            "preferences": {
                "use_collector": false,
                "gate_prefs": ["MiterSaw_Right_Gate"]
            },
            "button": {
                "type": "RGBLED_Button",
                "label": "RIGHT Miter Saw Button",
                "id": "right_miter_saw_button",
                "physical_location": "Above the miter saw",
                "connection": {
                    "hub": "main-hub",
                    "address": "0x20",
                    "pin": 2
                },
                "led": {
                    "label": "Right Miter Saw Button LED",
                    "id": "right_miter_saw_button_LED",
                    "type": "RGBLED",
                    "physical_location": "Above the miter saw",
                    "connection": {
                        "hub": "main-hub",
                        "address": "0x40",
                        "pins": [6, 7, 8]
                    }
                }
            }
        },
        {
            "type": "tool",
            "label": "floowSweep",
            "id": "floor_sweep",
            "status": "off",
            "preferences": {
                "use_collector": false,
                "gate_prefs": ["FloorSweep_Gate"]
