                "led": {
                    "label": "Floor Sweep Button LED",
                    "id": "floor_sweep_button_LED",
                    "type": "RGBLED",
                    "physical_location": "Above the miter saw",
                    "connection": {
                        "hub": "main-hub",
                        "address": "0x40",
                        "pins": [9, 10, 11]
                    }
                }
            }
        }
        
    ],
    "collectors": [
        {
            "type": "dust_collector",
            "label": "Main Collector",
            "id": "main-collector",
            "status": "off",
            "preferences": {
                "spin_up_delay": 10,
                "minimum_up_time": 10,
                "cool_down_time": 30
            },
            "relay": {
                "label": "Main Collector Relay",
                "id": "main_collector_relay",
                "type": "Relay",
                "physical_location": "By the collector",
                "connection": {
                    "hub": "local",
                    "pin": 21
                }
            }
        }
    ]
